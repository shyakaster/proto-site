<div class="section">
  <div class="container">
        <div class="row">
              <div class="col-sm-8">
                <h3>Contact</h3>
                <p>Please send us a message and we shall get back to you as soon as possible</p>
              
                    <div class="form-group col-md-12">
                        <%= form_for @contact do |f|%>
                            <%= f.label :contacts_name%>
                            <%= f.text_field :contacts_name,class:'form-control', required: true%>
                            <br>
                          </div>
                          <div class="form-group col-md-12">
                            <%= f.label :contacts_email%>
                            <%= f.text_field :contacts_email,class:'form-control', required: true%>
                            <br>
                          </div>
                          <div class="form-group col-md-12">
                            <%= f.label :contacts_phone%>
                            <%= f.text_field :contacts_phone, class:'form-control', required: true%>
                            <br>
                            </div>
                          <div class="form-group col-lg-12">
                            <%= f.label :contacts_message%>
                            <%= f.text_area :contacts_message,class:'form-control',as: :text, required: true %>
                            <br>
                            </div>
                            <div class="hidden">
                               <%= f.label :nickname%>
                               <%= f.text_area :nickname,hint: 'Leave this field blank' %>
                            </div>
                           <div class="col-lg-12">
                             <%= f.submit "Send Message", class:'btn btn-success btn-lg pull-right'%>
                          </div>
                        <%end%>
        </div>
          <div class="col-sm-4">
            <h3>Address</h3>
            <h4>Africarlogistics</h4>
            <p>
              <i class="fa fa-map-marker"></i> 123 Nkurumah Road, Kampala.
            </p>
            <p><i class="fa fa-phone"></i> 0772441442</p>
            <p><i class="fa fa-envelope"></i> <a href="mailto:info@banzhow.com">info@africarlogistics.tours</a></p>
            <p><i class="fa fa-clock-o"></i> Monday - Saturday: 9:00 AM to 5:00 PM</p>
          </div>
     </div>
  </div>
</div>

