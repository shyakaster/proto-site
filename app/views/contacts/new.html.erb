
<head>
  <script>
      function initMap() {
          var uluru = {lat: 0.351505, lng: 32.604188};
          var map = new google.maps.Map(document.getElementById('map-canvas'), {
              zoom: 4,
              center: uluru
          });
          var marker = new google.maps.Marker({
              position: uluru,
              map: map
          });
      }
  </script>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB-VrqUYZwMuDWT0ZXHYcMqRGEjPwQ3tFY&callback=initMap"
          type="text/javascript"></script>


