
<%= render 'layouts/navbar'%>


<div id="myCarousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
   
    <div class="item">
      <div class="fill" style="background-image:url('/assets/lion.jpg');"></div>
      <div class="carousel-caption">
        <h2>african lion</h2>
         <br>
        <br>
        <%unless signed_in?%>
         <%= link_to "Register to recieve offers", new_user_registration_path, class:'btn btn-lg btn-danger'%>
         <%end%>
        <!--<a href="#" class="button">SEE MORE</a>-->
      </div>
    </div>
    <div class="item active">
      <div class="fill" style="background-image:url('/assets/jinja_nile.jpg');"></div>
      <div class="carousel-caption">
        <h2>source of the nile river</h2>
        <!--<a href="#" class="button">DOWNLOAD</a>-->
         <br>
        <br>
        <%unless signed_in?%>
          <%= link_to "Register to recieve offers", new_user_registration_path, class:'btn btn-lg btn-danger'%>
        <%end%>
        
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <i class="fa fa-angle-left"></i>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <i class="fa fa-angle-right"></i>
  </a>
</div>

